<% if !@communities or !@communities.class==Array or @communities.length==0 -%>

<p>None</p>

<% else -%>

<table class="listtable">
  <tr>
	<th><input type="checkbox" name="markall" class="cammark" title="mark all" value="1" onclick="markall()" /></th>
    <th>ID</th>
    <th>Short name</th>
    <th>Full name</th>
  </tr>

<% odd_or_even = 0 %>
<% @communities.each do |community| %>
	<% odd_or_even = 1-odd_or_even%>
	<tr class="line<%= odd_or_even %>">
		<td><input type="checkbox" name="mark[]" class="cammark" title="mark" value="<%= community.id %>" /></td>
		<td><a href="#" onclick="viewrec1(<%= community.id %>)"><%= community.id %></a></td>
    <td><a href="#" onclick="viewrec1(<%= community.id %>)"><%= community.tagname %></a></td>
    <td><%= community.fullname %></td>
  </tr>
<% end %>
</table>

<% end -%>