<% if !@communities or !@communities.class==Array or @communities.length==0 -%>

<p>None</p>

<% else -%>

<table class="listtable">
  <tr>
    <th></th>
		<th>ID</th>
    <th>Short</th>
		<th>Name</th>
  </tr>

<% odd_or_even = 0 %>
<% @communities.each do |community| %>
	<% odd_or_even = 1-odd_or_even%>
	<tr class="line<%= odd_or_even %>">
		<td><input type="checkbox" name="mark[]" class="admmark" title="mark" value="<%= community.id %>" /></td>
		<td><%= community.id %></td>
		<td><%= community.tagname %></td>
		<td><%= community.fullname %></td>	
  </tr>
<% end %>
</table>

<% end -%>

<p><a href="javascript:add_community()">Add</a>: <%= select_tag :new_community, options_from_collection_for_select(@allcommunities, "id", "name") %> | <a href="javascript:del_community()">Delete marked</a></p>