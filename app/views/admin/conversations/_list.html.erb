<% if !@conversations or !@conversations.class==Array or @conversations.length==0 -%>

<p>None</p>

<% else -%>

<table class="listtable">
  <tr>
	<th><input type="checkbox" name="markall" class="cammark" title="mark all" value="1" onclick="markall()" /></th>
    <th>ID</th>
    <th>Short name</th>
    <th>Full name</th>
    <th>Mode</th>
  </tr>

<% odd_or_even = 0 %>
<% @conversations.each do |conversation| %>
	<% odd_or_even = 1-odd_or_even%>
	<tr class="line<%= odd_or_even %>">
		<td><input type="checkbox" name="mark[]" class="cammark" title="mark" value="<%= conversation.id %>" /></td>
		<td><a href="#" onclick="viewrec1(<%= conversation.id %>)"><%= conversation.id %></a></td>
    <td><a href="#" onclick="viewrec1(<%= conversation.id %>)"><%= conversation.shortname %></a></td>
    <td><%= conversation.name %></td>
    <td><%= conversation.together_apart %></td>
  </tr>
<% end %>
</table>

<% end -%>
