<% if !@group_participants or !@group_participants.class==Array or @group_participants.length==0 -%>

<p>None</p>

<% else -%>

<table class="listtable">
  <tr>
		<th>ID</th>
		<th>Name</th>
		<th>Moderator</th>
    <th>Active</th>
  </tr>

<% odd_or_even = 0 %>
<% @group_participants.each do |group_participant| %>
	<% odd_or_even = 1-odd_or_even%>
	<tr class="line<%= odd_or_even %>">
		<td><%= link_to_function group_participant.participant_id, "viewrec2(#{group_participant.id})" %></td>
		<td><%= link_to_function (group_participant.participant ? group_participant.participant.name : '???') , "viewrec2(#{group_participant.id})" %></td>
		<td><%= group_participant.moderator ? 'yes' : '' %></td>	
		<td><%= group_participant.active ? 'yes' : 'no' %></td>		
  </tr>
<% end %>
</table>

<% end -%>

<p><%= link_to_function 'Add member', "newrec2()" %></p>