
<form id="searchform" name="searchform" action="">
<input type="hidden" name="page" id="page" value="<%= @page || 1 %>"/>
<table class="edittable">
<tr><td class="left">ID</td><td><%= text_field_tag :help_text_id, "", "size"=>6 %></td></tr>
<tr><td class="left">Code</td><td><%= text_field_tag :code, "", "size"=>52 %></td></tr>
<tr><td class="left">Description</td><td><%= text_field_tag :description, "", "size"=>52 %></td></tr>

<tr></tr>
<tr><td class="left">Sort</td><td>
<% xsort = [['',''],['code','code'],['description','description'],["created",'created_at desc'],['ID','id desc']] %>
<% for x in (1..2).to_a -%>
<%= select_tag "sort#{x}", options_for_select(xsort,@sort[x-1]) %>
<% end -%>
&nbsp;&nbsp;
Per Page <%= select_tag(:per_page, options_for_select([10,20,30,50,100,200,500,1000,['* all *','9999']],30)) %>
</td></tr>

</table>

<table width="100%"><tr><td>
<input type="button" value="Search/List" onclick="search()"/>
</td><td align="right">
<%= link_to_function 'New help text', "newrec1()" %>&nbsp;&nbsp;&nbsp;
</td></tr>	
</table>	

</form>



<div id="list1box" class="mainbox">
<div class="nav_icon"><img src="/images/sanscons/close.gif" class="icon" onclick="boxclose('list1')" title="Close" /></div>
<div class="nav_icon" id="maxlist1im" style="display:none"><img src="/images/sanscons/add.gif" class="icon" onclick="boxmax('list1')" title="Maximize" /></div>
<div class="nav_icon" id="minlist1im" style="display:"><img src="/images/sanscons/subtract.gif" class="icon" onclick="boxmin('list1')" title="Minimize" /></div>
<a name="list1"></a>
<h3 id="list1title">List of Help Texts</h3>
<div id="list1boxcontent"></div>
</div>

<div id="rec1box" class="mainbox">
<div class="nav_icon"><img src="/images/sanscons/close.gif" class="icon" onclick="boxclose('rec1')" title="Close" /></div>
<div class="nav_icon" id="maxrec1im" style="display:none"><img src="/images/sanscons/add.gif" class="icon" onclick="boxmax('rec1')" title="Maximize" /></div>
<div class="nav_icon" id="minrec1im" style="display:"><img src="/images/sanscons/subtract.gif" class="icon" onclick="boxmin('rec1')" title="Minimize" /></div>
<a name="cam"></a>
<h3 id="rec1title">Help Text Record</h3>
<div id="rec1boxcontent"></div>
</div>


<script type="text/javascript">
var curid1 = 0;
var curid2 = 0;
function search() {
	$('#list1box').show();
  $('#list1box').css('opacity','0.5');
	showworking();
	var pars = $("#searchform").serialize();
	$.ajax({
     type: "GET",
     url: "/admin/help_texts",
     data: pars,
     complete: function(t){	
       $("#list1boxcontent").html(t.responseText);
		   searchdone();
     }
   });	
}
var searchdone = function(t) {
  $('#list1box').show();
  $('#list1boxcontent').show();
  hideworking();
  $('#list1box').css('opacity','1.0');
  boxmax('list1');
}
function viewrec1(id) {
  curid1 = id;
  $("#rec1boxcontent").html("<br/><br/>working...<br/>");
	$.ajax({
    type: "GET",
    url: "/admin/help_texts/"+id,
    complete: function(t){	
      $("#rec1boxcontent").html(t.responseText);
		  $('#rec1box').css('opacity','1.0');
    }
  });	
}
function editrec1() {
  id = curid1;
  $('#rec1box').css('opacity','0.5');
	$.ajax({
    type: "GET",
    url: "/admin/help_texts/"+id+'/edit',
    complete: function(t){	
      $("#rec1boxcontent").html(t.responseText);
		  $('#rec1box').css('opacity','1.0');
     }
   });	
}
function newrec1() {
	curid1 = 0;
  $('#rec1box').css('opacity','0.5');
	$.ajax({
    type: "GET",
    url: "/admin/help_texts/new",
    complete: function(t){	
      $("#rec1boxcontent").html(t.responseText);
		  $('#rec1box').css('opacity','1.0');
     }
   });	
}
function delrec1() {
	if (confirm("Are you sure you want to delete help text #" + curid1 + "?")) {
    $('rec1box').css('opacity','0.5');
		$.ajax({
	    type: 'DELETE',
	    url: '/admin/help_texts/'+curid1,
	    complete: function(t){	
	      $("#rec1boxcontent").html(t.responseText);
			  $('#rec1box').css('opacity','1.0');
				search();
	     }
	   });			
	}
}
function saverec1() {
  id = curid1;
  if (id>0) {
		var pars = $("#edit_help_text_"+id).serialize();
    var url = "/admin/help_texts/"+id;
		var xtype = 'PUT';
  } else {
		var pars = $("#new_help_text").serialize();
    var url = "/admin/help_texts";
		var xtype = 'POST';
  }
  $('#rec1box').css('opacity','0.5');
	$.ajax({
    type: xtype,
    url: url,
    data: pars,
    complete: function(t){	
      $("#rec1boxcontent").html(t.responseText);
		  $('#rec1box').css('opacity','1.0');
			search();
     }
   });	
}

function list2() {
	$('#list2box').show();
  $('#list2box').css('opacity','0.5');
	showworking();
	$.ajax({
     type: "GET",
     url: "/admin/help_texts/" + curid1 + "/admins",
     complete: function(t){	
       $("#list2boxcontent").html(t.responseText);
		   $('#list2box').show();
		   $('#list2boxcontent').show();
		   hideworking();
		   $('#list2box').css('opacity','1.0');
		   boxmax('list2');
     }
   });	
}

var allmarked = false;
function markall() {
	var marks = $('input.cammark');
	for (var x=0;x<marks.length;x++) {
		var mark = marks[x];
		if (allmarked) {
			mark.checked = false;
		} else {
			mark.checked = true;
		}	
	}
	if (allmarked) {
		allmarked = false;
	} else {
		allmarked = true;
	}
}
search();
</script>




