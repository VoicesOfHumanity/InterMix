<% if !@hubs or !@hubs.class==Array or @hubs.length==0 -%>

<p>None</p>

<% else -%>

<table class="listtable">
  <tr>
		<th><input type="checkbox" name="markall" class="cammark" title="mark all" value="1" onclick="markall()" /></th>
    <th>ID</th>
    <th>Name</th>
  </tr>

<% odd_or_even = 0 %>
<% @hubs.each do |hub| %>
	<% odd_or_even = 1-odd_or_even%>
	<tr class="line<%= odd_or_even %>">
		<td><input type="checkbox" name="mark[]" class="cammark" title="mark" value="<%= hub.id %>" /></td>
		<td><a href="#" onclick="viewrec1(<%= hub.id %>)"><%= hub.id %></a></td>
    <td><a href="#" onclick="viewrec1(<%= hub.id %>)"><%= hub.name %></a></td>
  </tr>
<% end %>
</table>

<% end -%>