<% if !@moons or !@moons.class==Array or @moons.length==0 -%>

<p>None</p>

<% else -%>

<table class="listtable">
  <tr>
		<th><input type="checkbox" name="markall" class="cammark" title="mark all" value="1" onclick="markall()" /></th>
    <th>ID</th>
    <th>Name</th>
  </tr>

<% odd_or_even = 0 %>
<% @moons.each do |moon| %>
	<% odd_or_even = 1-odd_or_even%>
	<tr class="line<%= odd_or_even %>">
		<td><input type="checkbox" name="mark[]" class="cammark" title="mark" value="<%= moon.id %>" /></td>
		<td><a href="#" onclick="viewrec1(<%= moon.id %>)"><%= moon.id %></a></td>
    <td><a href="#" onclick="viewrec1(<%= moon.id %>)"><%= moon.mdate %></a></td>
    <td><%= moon.new_or_full %>:</td>
    <td><%= moon.topic %></td>
  </tr>
<% end %>
</table>

<% end -%>