<% if !@templates or !@templates.class==Array or @templates.length==0 -%>

<p>None</p>

<% else -%>

<table class="listtable">
  <tr>
		<th><input type="checkbox" name="markall" class="cammark" title="mark all" value="1" onclick="markall()" /></th>
    <th>ID</th>
    <th>Name</th>
		<th>Section</th>
		<th>Type</th>
  </tr>

<% odd_or_even = 0 %>
<% @templates.each do |template| %>
	<% odd_or_even = 1-odd_or_even%>
	<tr class="line<%= odd_or_even %>">
		<td><input type="checkbox" name="mark[]" class="cammark" title="mark" value="<%= template.id %>" /></td>
		<td><a href="#" onclick="viewrec1(<%= template.id %>)"><%= template.id %></a></td>
    <td><a href="#" onclick="viewrec1(<%= template.id %>)"><%= template.name %></a></td>
    <td><%= template.section %></td>
    <td><%= template.mail_web %></td>
  </tr>
<% end %>
</table>

<% end -%>