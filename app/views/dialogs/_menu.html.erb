<% if @dsection == 'meta' -%>
<p style="clear:both;padding:0 19px 0 0"><span style="font-size:20px"><%= @dialog.name %></span><span style="font-size:16px"><%= @period ? ": #{@period.name}" : "" %></span></p>
<% else -%>
<p style="clear:both;padding:0 19px 0 0"><span style="font-size:20px"><%= @dialog.name %></span><span id="period_name_heading" style="font-size:16px;display:<%= ((@dialog.active_period and @sortby=='default') or @period_id.to_i > 0) ? "inline" : "none" %>"><%= @period ? ": #{@period.name}" : "" %></span></p>
<% end -%>

<% if true or session[:dialog_id].to_i == 0 -%>
<ul class="horizmenu">
<li><a class="menu<%= ' selected' if @dsection=='info' %>" href="/dialogs/<%= @dialog.id %>/view">Info</a></li>
<li><a class="menu<%= ' selected' if @dsection=='forum' %>" href="/dialogs/<%= @dialog.id %>/forum">Forum</a></li>
<li><a class="menu<%= ' selected' if @dsection=='meta' %>" href="/dialogs/<%= @dialog.id %>/result">Overview</a></li>
<% if @is_admin -%>
<li><a class="menu<%= ' selected' if @dsection=='edit' %>" href="/dialogs/<%= @dialog.id %>/edit">Admin</a></li>
<% end -%>
<% if false -%>
<li><a  class="menu<%= ' selected' if @dsection=='' %>" href="/dialogs">All Discussions</a></li>
<% end -%>
</ul>
<% end -%>

<div style="clear:both;height:1px"></div>