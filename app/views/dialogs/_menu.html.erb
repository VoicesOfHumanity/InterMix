<%= render(:partial => 'dialogs/top_titles')%>

<% if true or session[:dialog_id].to_i == 0 -%>
<ul class="horizmenu">

<li><a class="menu<%= ' selected' if @dsection=='list' %>" href="/dialogs/<%= @dialog.id %>/slider?show_result=0">Forum</a></li>
<li><a class="menu<%= ' selected' if @dsection=='meta' %>" href="/dialogs/<%= @dialog.id %>/slider?<%= @conversation ? "conv=#{@conversation.shortname}&amp;" : '' %>show_result=1">Voices of Humanity</a></li>
<li><a id="about_a" class="menu<%= ' selected' if @dsection=='info' %>" href="<%= (@community and @comtag.to_s!='' and @comtag!='*my*' ) ? "/communities/#{@community.id}" : "/dialogs/#{@dialog.id}/view" %>">About</a></li>

<% if false -%>
<li><a class="menu<%= ' selected' if @dsection=='forum' %>" href="/dialogs/<%= @dialog.id %>/forum">More Options</a></li>
<% end -%>

<% if false -%>
<li><a class="menu" href="/dialogs/<%= @dialog.id %>/view#participatinggroups">Groups</a></li>
<% end -%>
<% if @is_admin or current_participant.sysadmin -%>
<li><a class="menu<%= ' selected' if @dsection=='edit' %>" href="/dialogs/<%= @dialog.id %>/edit">Admin</a></li>
<% end -%>
<% if false -%>
<li><a  class="menu<%= ' selected' if @dsection=='' %>" href="/dialogs">All Discussions</a></li>
<% end -%>
<% if false and @dialog.active_period %>
<li><a class="menu" href="/dialogs/<%= @dialog.id %>/forum?simple=1">Easy Mode</a></li>
<% end %>
</ul>
<% end -%>

<div style="clear:both;height:1px"></div>