<% logger.info("dialogs#slider _menu")%>
<%= render(:partial => 'dialogs/top_titles')%>

<ul class="horizmenu">

<li><a class="menu<%= ' selected' if @dsection=='list' %>" href="/dialogs/<%= @dialog.id %>/slider?<%= @comtag != "" ? "comtag=#{@comtag}&" : "" %><%= @conversation ? "conv=#{@conversation.shortname}&" : '' %>show_result=0">Forum</a></li>
<li><a class="menu<%= ' selected' if @dsection=='meta' %>" href="/dialogs/<%= @dialog.id %>/slider?<%= @comtag != "" ? "comtag=#{@comtag}&" : "" %><%= @conversation ? "conv=#{@conversation.shortname}&" : '' %>show_result=1">Voices of Humanity</a></li>
<% if @conversation and @conversation.together_apart == 'apart' -%>
<li><a class="menu<%= ' selected' if @dsection=='top' %>" href="/dialogs/<%= @dialog.id %>/slider?<%= @comtag != "" ? "comtag=#{@comtag}&" : "" %>conv=<%= @conversation.shortname %>&top_posts=1">Top Posts</a></li>
<% end %>
<% if @conversation -%>
  <% about_link = "/conversations/#{@conversation.id}" %>
<% else -%>
  <% about_link = (@community and @comtag.to_s!='' and @comtag!='*my*' ) ? "/communities/#{@community.id}" : "/dialogs/#{@dialog.id}/view" %>
<% end -%>
<li><a id="about_a" class="menu<%= @dsection=='info' ? ' selected' : ''  %>" href="<%= about_link %>">About</a></li>
<% if @is_admin or current_participant.sysadmin -%>
  <% if @conversation -%>
    <li><a class="menu<%= ' selected' if @dsection=='edit' %>" href="/conversations/<%= @conversation.id %>/edit">Admin</a></li>
  <% else -%>
    <li><a class="menu<%= ' selected' if @dsection=='edit' %>" href="/dialogs/<%= @dialog.id %>/edit">Admin</a></li>
  <% end -%>
<% end -%>
</ul>
  

<div style="clear:both;height:1px"></div>