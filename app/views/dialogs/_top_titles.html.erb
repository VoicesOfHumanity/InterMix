<% logger.info("dialogs#slider _top_titles") %>
<p style="clear:both;padding:0 19px 0 0">
  
<a href="/dialogs/<%= @dialog.id %>/slider" style="text-decoration:none;"><span style="font-size:20px;color:#000;">
  
<% if @conversation -%>  
  Conversation
<% else -%>  
  <%= @dialog ? @dialog.name : '???' %>
<% end -%>  
<% if @dsection == 'meta' -%>
  - <span id="top_result_header"><%= @conversation.name if @conversation %> - Highest Rated <%= @nvaction ? 'Nonviolent Action Items' : 'Messages' %></span>
<% elsif @dsection == 'info' -%>
  - About</span>
<% elsif @dsection == 'list' and @conversation and @conversation.name.to_s != '' -%>
  - <span id="top_forum_header"><%= @conversation.name if @conversation %> - <%=  @conversation.together_apart.capitalize %></span> 
<% elsif @dsection == 'list' -%>
  - <span id="top_forum_header"><%= @nvaction ? 'Nonviolent Action Forum' : 'Forum' %></span>
<% end -%>
</a>
<% if @conversations and @conversation and @is_conv_member -%>
  &nbsp;&nbsp;
  <% if @conversations.length > 1 -%>
    <%= select_tag "chg_conv", options_for_select([['Change Conversation','']]+@conversations.collect{|c| [c.name,c.shortname]}+[['Leave Conversation','-']]), :onchange => 'chg_conversation()' %>
  <% else @conversations.length == 1 -%>
    <input type="button" value="Leave Conversation" onclick="leave_conversation()">
  <% end -%>
<% end -%>

</p>