<h3>Discussions</h3>

<% if @dialogsingroup.length > 0 -%>
	<p>You can participate in these discussions:</p>
<% else -%>
	<p>None</p>
<% end -%>

<ul>
<% for dialog in @dialogsingroup -%>

<% 
if dialog.shortname.to_s != "" and session[:group_prefix] != ""
	dom =  "#{dialog.shortname}.#{session[:group_prefix]}.#{ROOTDOMAIN}"
elsif dialog.shortname.to_s != ""
	dom =  "#{dialog.shortname}.#{ROOTDOMAIN}"
else
	dom = "#{BASEDOMAIN}"
end
%>

<li><a href="http://<%= dom %>/dialogs/<%= dialog.id %>/forum"><%= dialog.name %></a>
	<a href="http://<%= dom %>/dialogs/<%= dialog.id %>/view">info</a>
	<% if @admin4.include?(dialog.id) then %><a href="http://<%= dom %>/dialogs/<%= dialog.id %>/edit">edit</a><% end -%>
</li>
<% end -%>
</ul>

<% if session[:is_anyadmin] -%>
<p><a href="/dialogs/new">Create a new discussion</a></p>
<% end -%>