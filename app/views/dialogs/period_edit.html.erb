<%= render(:partial => 'dialogs/menu')%>

<h3 style="clear:both">Focus Period</h3>

<form action="/dialogs/<%= @dialog.id %>/period_save" method="post">
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<%= hidden_field_tag :period_id, @period_id %>

<p>Title: <%= text_field :period, :name, :size => 30 %></p>
<p>Start date: <%= text_field :period, :startdate, :size => 10 %> YYYY-MM-DD</p>
<p>Posting end: <%= text_field :period, :endposting, :size => 10 %> YYYY-MM-DD</p>
<p>Rating end: <%= text_field :period, :endrating, :size => 10 %> YYYY-MM-DD</p>

<p><input type="submit" value="Save"></p>

</form>