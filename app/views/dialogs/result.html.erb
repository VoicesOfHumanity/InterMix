<% require 'pp' %>

<%= render(:partial => 'dialogs/menu') %>

<% if (@period and @dialog.active_period and @period == @dialog.active_period) -%>
<p>This Decision Period is still open. These results are preliminary and subject to change.</p>
<% end -%>

<p>
	<%= select_tag :period_id, options_for_select([['* all messages *',0]]+@dialog.periods.collect{|p| [p.name,p.id]},@period_id), :onchange=>"reload()" %>
	<%= select_tag :short_full, options_for_select([['short list','short'],['medium list','medium'],['full list','full']],@short_full), :onchange=>"reload()" %>
	<%= select_tag :less_more, options_for_select([['less info','less'],['more info','more']],@less_more),:style=>"display:#{@short_full=='short' ? "none" : "inline"}",:onchange=>"reload()" %>
	<%= select_tag :regress, options_for_select([['regress to mean','regress'],['raw scores','raw']],@regress),:style=>"display:#{@short_full=='short' ? "none" : "inline"}",:onchange=>"reload()" %>
	<%= select_tag :limit_group_id, options_for_select([['all groups',0]]+@dialog.groups.collect{|c| [c.name,c.id]},@limit_group_id), :style=>"display:#{@short_full=='short' ? "none" : "inline"}", :onchange=>"reload()" %>	
</p>

<% if @period_id.to_i == 0 -%>
<p>These are the overall results regardless of decision period</p>
<% end -%>

<% if params[:ratings] and @regmean -%>
<h3>Regression to the Mean</h3>
<p>Interest: avg: <%= @data[0]['avg_votes_int'] %> votes of <%= @data[0]['avg_interest'] %><br>
Approval: avg: <%= @data[0]['avg_votes_app'] %> votes of <%= @data[0]['avg_approval'] %></p>
<% end -%>

<% if @short_full=='full' -%>
<h2>Overall<%= " winner" if not @all %></h2>
<% else -%>
<h2>Voice of Humanity as One</h2>
<% end -%>

<% if false %>chosen by all voters (<%= @data[0]['items'].length %> items, <%= @data[0]['ratings'].length %> votes)<% end %>

<div>
<% if @data[0]['itemsproc'].length == 0 -%>
	no overall winner<br>
<% else -%>	
	<% for item_id,i in @data[0]['itemsproc'] -%>
		<a href="/items/<%= item_id %>/view" style="<%= "font-size:14px;font-weight:bold" if @short_full=='short'%>"><%= i['subject'] || "no subject" %></a> <% if @less_more=='more' %>author: <%= i['name'] %><% end %> interest: <%= sprintf("%.1f",i['avg_interest']) %>, approval: <%= sprintf("%.1f",i['avg_approval']) %>, value:<%= sprintf("%.1f",i['value'])  %>, <% if @less_more=='more' %>controversy: <%= sprintf("%.1f",i['controversy'])  %>,<% end %> ratings:<%=  (i['num_interest'] or i['num_approval']) ? [i['num_interest'],i['num_approval']].max : 0  %><br>
		<% if params[:ratings] and i['ratings'].length > 0 -%>
      <b>Ratings:</b><br>
      <% i['ratings'].each do |r| %>  
        <%= "#{r.created_at} by user:#{r.participant_id} in group:#{r.group_id} discussion:#{r.dialog_id} period:#{r.period_id} interest:#{r.interest.to_i} approval:#{r.approval.to_i}" %><br>
      <% end -%>  
		<% end -%>
		<% break if not @all %>
	<% end -%>
	[<a href="/dialogs/<%= @dialog_id %>/forum?<%=raw @period_id > 0 ? "period_id=#{@period_id}&amp;" : "" %><%=raw @limit_group_id > 0 ? "limit_group_id=#{@limit_group_id}&amp;" : "" %>sortby=*value*&amp;threads=root&amp;from=result">see all in the forum</a>]<br>
<% end -%>
<br>
</div>

<% if params[:ratings] -%>
<p>Explanation:<br><%=raw @data[0]['explanation'] %></p>
<pre>
<%= @data[0].inspect %>	
</pre>	
<% end -%>

<% for metamap in @metamaps -%>

	<div>
	<% for metamap_node_id,minfo in @data[metamap.id]['nodes_sorted'] -%>
		<% metamap_node_name = minfo[0] %>
		<% metamap_node = minfo[1] %>
		<h3 title="<%= metamap_node_id %>"><%= metamap_node_name %></h3>
		
		<% if @short_full == 'short'-%>
		
			<% if  @data[metamap.id]['postedby']['nodes'][metamap_node_id] and  @data[metamap.id]['postedby']['nodes'][metamap_node_id]['itemsproc'].length > 0 -%>			
				<% if @data[metamap.id]['matrix']['post_rate'][metamap_node_id][metamap_node_id] -%>
					<% xcount = 0 %>
					<% for item_id,i in @data[metamap.id]['matrix']['post_rate'][metamap_node_id][metamap_node_id]['itemsproc'] -%>
					<% if xcount == 0 and !@all and i['value'] <= 0 %>
						no positive results<br>
						<% break %>
					<% else -%>
						<a href="/items/<%= item_id %>/view" style="font-size:14px;font-weight:bold"><%= i['subject'] || "no subject" %></a> <% if @less_more=='more' %>author: <%= i['name'] %><% end %> interest: <%= sprintf("%.1f",i['avg_interest']) %>, approval: <%= sprintf("%.1f",i['avg_approval']) %>, value:<%= sprintf("%.1f",i['value']) %>, <% if @less_more=='more' %>controversy: <%= sprintf("%.1f",i['controversy'])  %>,<% end %> ratings:<%=  (i['num_interest'] or i['num_approval']) ? [i['num_interest'],i['num_approval']].max : 0  %><br>
					<% end -%>
					<% break if not @all %>
					<% xcount += 1 %>
					<% end -%>
				<% else -%>
					no messages<br>
				<% end -%>
				[<a href="/dialogs/<%= @dialog_id %>/forum?<%=raw @period_id > 0 ? "period_id=#{@period_id}&amp;" : "" %><%=raw @limit_group_id > 0 ? "limit_group_id=#{@limit_group_id}&amp;" : "" %>sortby=*value*&amp;threads=root&amp;from=result&amp;posted_by_metamap_<%= metamap.id %>=<%= metamap_node_id %>&amp;rated_by_metamap_<%= metamap.id %>=<%= metamap_node_id %>">see all in the forum</a>]<br>
			<% else -%>
				no messages<br>
			<% end -%>
			<br>
		
		<% else -%>

			<% if  @data[metamap.id]['postedby']['nodes'][metamap_node_id] and  @data[metamap.id]['postedby']['nodes'][metamap_node_id]['itemsproc'].length > 0 -%>
				<% if @all -%>
				<b>highest rated <span title="<%= metamap_node_id %>"><%= metamap_node_name %></span> chosen by all voters (<%= @data[metamap.id]['postedby']['nodes'][metamap_node_id]['ratings'].length %> items, <%= @data[metamap.id]['postedby']['nodes'][metamap_node_id]['ratings'].length %> votes):</b><br>
				<% else -%>
				<b><span title="<%= metamap_node_id %>"><%= metamap_node_name %></span> winner chosen by all voters (<%= @data[metamap.id]['postedby']['nodes'][metamap_node_id]['items'].length %> items, <%= @data[metamap.id]['postedby']['nodes'][metamap_node_id]['ratings'].length %> votes):</b><br>
				<% end -%>
				<% for item_id,i in @data[metamap.id]['postedby']['nodes'][metamap_node_id]['itemsproc'] -%>
				<a href="/items/<%= item_id %>/view"><%= i['subject'] || "no subject" %></a> <% if @less_more=='more' %>author: <%= i['name'] %><% end %> interest: <%= sprintf("%.1f",i['avg_interest']) %>, approval: <%= sprintf("%.1f",i['avg_approval']) %>, value:<%= sprintf("%.1f",i['value']) %>, <% if @less_more=='more' %>controversy: <%= sprintf("%.1f",i['controversy'])  %>,<% end %> ratings:<%=  (i['num_interest'] or i['num_approval']) ? [i['num_interest'],i['num_approval']].max : 0  %><br>
				<% break if not @all %>
				<% end -%>
				[<a href="/dialogs/<%= @dialog_id %>/forum?<%=raw @period_id > 0 ? "period_id=#{@period_id}&amp;" : "" %><%=raw @limit_group_id > 0 ? "limit_group_id=#{@limit_group_id}&amp;" : "" %>sortby=*value*&amp;threads=root&amp;from=result&amp;posted_by_metamap_<%= metamap.id %>=<%= metamap_node_id %>">see all in the forum</a>]<br>
			<% else -%>
				<%= metamap_node_name %> posted nothing<br>
			<% end -%>
			<br>
		
			<% if @data[metamap.id]['ratedby']['nodes'][metamap_node_id] and @data[metamap.id]['ratedby']['nodes'][metamap_node_id]['itemsproc'].length > 0 -%>
				<% if @all -%>
				<b>items highest rated by <span title="<%= metamap_node_id %>"><%= metamap_node_name %></span> of all items (<%=  @data[metamap.id]['ratedby']['nodes'][metamap_node_id]['items'].length %> items, <%=  @data[metamap.id]['ratedby']['nodes'][metamap_node_id]['ratings'].length %> votes):</b><br>
				<% else -%>
				<b>overall winner chosen by <span title="<%= metamap_node_id %>"><%= metamap_node_name %></span> voters (<%=  @data[metamap.id]['ratedby']['nodes'][metamap_node_id]['items'].length %> items, <%=  @data[metamap.id]['ratedby']['nodes'][metamap_node_id]['ratings'].length %> votes):</b><br>			
				<% end -%>
				<% for item_id,i in @data[metamap.id]['ratedby']['nodes'][metamap_node_id]['itemsproc'] -%>
					<a href="/items/<%= item_id %>/view"><%= i['subject'] || "no subject" %></a> <% if @less_more=='more' %>author: <%= i['name'] %><% end %> interest: <%= sprintf("%.1f",i['avg_interest']) %>, approval: <%= sprintf("%.1f",i['avg_approval']) %>, value:<%= sprintf("%.1f",i['value']) %>, <% if @less_more=='more' %>controversy: <%= sprintf("%.1f",i['controversy'])  %>,<% end %> ratings:<%=  (i['num_interest'] or i['num_approval']) ? [i['num_interest'],i['num_approval']].max : 0  %><br>
					<% break if not @all %>
				<% end -%>
				[<a href="/dialogs/<%= @dialog_id %>/forum?<%=raw @period_id > 0 ? "period_id=#{@period_id}&amp;" : "" %><%=raw @limit_group_id > 0 ? "limit_group_id=#{@limit_group_id}&amp;" : "" %>sortby=*value*&amp;threads=root&amp;from=result&amp;rated_by_metamap_<%= metamap.id %>=<%= metamap_node_id %>">see all in the forum</a>]<br>
			<% else -%>
				<%= metamap_node_name %> rated nothing<br>
			<% end -%>
			<br>
		
			<% if  @data[metamap.id]['postedby']['nodes'][metamap_node_id] and  @data[metamap.id]['postedby']['nodes'][metamap_node_id]['items'].length > 0 -%>
				<% for rate_metamap_node_id,rdata in @data[metamap.id]['matrix']['post_rate'][metamap_node_id] %>
					<% if @all -%>
					<b>highest rated <span title="<%= metamap_node_id %>"><%= metamap_node_name %></span> items chosen by <span title="<%= rate_metamap_node_id %>"><%= @data[metamap.id]['nodes'][rate_metamap_node_id][0] %></span> raters (<%= @data[metamap.id]['matrix']['post_rate'][metamap_node_id][rate_metamap_node_id]['items'].length %> items, <%= @data[metamap.id]['matrix']['post_rate'][metamap_node_id][rate_metamap_node_id]['ratings'].length %> votes):</b><br>
					<% else -%>
					<b><span title="<%= metamap_node_id %>"><%= metamap_node_name %></span> winner chosen by <span title="<%= rate_metamap_node_id %>"><%= @data[metamap.id]['nodes'][rate_metamap_node_id][0] %></span> raters (<%= @data[metamap.id]['matrix']['post_rate'][metamap_node_id][rate_metamap_node_id]['items'].length %> items, <%= @data[metamap.id]['matrix']['post_rate'][metamap_node_id][rate_metamap_node_id]['ratings'].length %> votes):</b><br>			
					<% end -%>
					<% for item_id,i in @data[metamap.id]['matrix']['post_rate'][metamap_node_id][rate_metamap_node_id]['itemsproc'] -%>
						<a href="/items/<%= item_id %>/view"><%= i['subject'] || "no subject" %></a> <% if @less_more=='more' %>author: <%= i['name'] %><% end %> interest: <%= sprintf("%.1f",i['avg_interest']) %>, approval: <%= sprintf("%.1f",i['avg_approval']) %>, value:<%= sprintf("%.1f",i['value']) %>, <% if @less_more=='more' %>controversy: <%= sprintf("%.1f",i['controversy'])  %>,<% end %> ratings:<%=  (i['num_interest'] or i['num_approval']) ? [i['num_interest'],i['num_approval']].max : 0  %><br>
						<% break if not @all %>
					<% end -%>
					[<a href="/dialogs/<%= @dialog_id %>/forum?<%=raw @period_id > 0 ? "period_id=#{@period_id}&amp;" : "" %><%=raw @limit_group_id > 0 ? "limit_group_id=#{@limit_group_id}&amp;" : "" %>sortby=*value*&amp;threads=root&amp;from=result&amp;posted_by_metamap_<%= metamap.id %>=<%= metamap_node_id %>&amp;rated_by_metamap_<%= metamap.id %>=<%= rate_metamap_node_id %>">see all in the forum</a>]<br><br>
				<% end -%>
			<% end -%>	
				
		<% end -%>
		
	<% end -%>
	<br>
	</div>

<% end -%>

<% if @limit_group_id == 0 -%>
<% for group in @dialog.groups.sort {|a,b| a.name <=> b.name} -%>
	<% group_id = group.id %>
	<div>
	<h3 title="<%= metamap_node_id %>"><%= group.name %></h3>
	<% if @data['groups'][group_id]['itemsproc'].length == 0 or @data['groups'][group_id]['ratings'].length == 0 -%>
		no messages<br>
	<% else -%>	
		<% xcount = 0 %>
		<% for item_id,i in @data['groups'][group_id]['itemsproc'] -%>
			<% if xcount == 0 and !@all and i['value'] <= 0 %>
				no positive results<br>
				<% break %>
			<% else -%>
				<a href="/items/<%= item_id %>/view" style="<%= "font-size:14px;font-weight:bold" if @short_full=='short'%>"><%= i['subject'] || "no subject" %></a> <% if @less_more=='more' %>author: <%= i['name'] %><% end %> interest: <%= sprintf("%.1f",i['avg_interest']) %>, approval: <%= sprintf("%.1f",i['avg_approval']) %>, value:<%= sprintf("%.1f",i['value'])  %>, <% if @less_more=='more' %>controversy: <%= sprintf("%.1f",i['controversy'])  %>,<% end %> ratings:<%=  (i['num_interest'] or i['num_approval']) ? [i['num_interest'],i['num_approval']].max : 0  %><br>
				<% break if not @all %>
			<% end -%>
			<% xcount += 1 %>
		<% end -%>
		[<a href="/dialogs/<%= @dialog_id %>/forum?<%=raw @period_id > 0 ? "period_id=#{@period_id}&amp;" : "" %>limit_group_id=<%= group_id %>&amp;sortby=*value*&amp;threads=root&amp;from=result">see all in the forum</a>]<br>
	<% end -%>
	<br>
	</div>
<% end -%>
<% end -%>

<script>
function updatemeta() {
	var period_id = $('#period_id').val();
	window.location.href = "?period_id=" +  period_id;
}
function reload() {
	var short_full = $('#short_full').val();
	var less_more = $('#less_more').val();
	var regress = $('#regress').val();
	var period_id = $('#period_id').val();;
	var limit_group_id = $('#limit_group_id').val();
	if (short_full=='short') {
		$('#less_more').hide();
		$('#regress').hide();
	} else {
		$('#less_more').show();
		$('#regress').show();
	}
	window.location.href = "?period_id=" + period_id + "&short_full=" +  short_full + '&less_more=' + less_more + '&regress=' + regress + '&limit_group_id=' + limit_group_id;	
}
</script>
