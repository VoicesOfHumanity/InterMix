<form action="/fbapp/search" method="post">
<input type="text" name="q" id="q" value="<%= @q %>"><input type="submit" value="Search">
</form>

<% x = 0 -%>
<table>
<% for item in @items -%>
	<% if x % 3 == 0 -%>
	<tr>
	<% end -%>
	<td>
	<img src="/images/data/items/<%= item.id %>/big.jpg" width="200" title="<%= "#{item.participant.first_name} #{item.participant.last_name}: #{item.short_content}" %>"><br>
	<span style="font-family:Comic Sans MS"><%= "#{item.short_content} - #{item.participant.first_name} #{item.participant.last_name}" %></span>
	</td>
	<% x += 1 -%>
	<% if ((x % 3) == 0) or (x == @items.length) -%>
	</tr>
	<% end -%>
<% end -%>
</table>