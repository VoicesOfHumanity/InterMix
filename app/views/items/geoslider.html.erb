<input type="hidden" name="per_level" id="per_level" value="1">


<script>
var cur_level = 1;
$(function() {
  $( "#slider-vertical" ).slider({
    orientation: "vertical",
    range: "min",
    min: 1,
    max: 6,
    value: cur_level,
    slide: function( event, ui ) {
      cur_level = ui.value;
      $( "#per_level" ).val( cur_level );
      per_reload(cur_level);
    }
  });
  $( "#per_level" ).val( $( "#slider-vertical" ).slider( "value" ) );
});
function per_reload(per_level) {  
 	$('#per_main').css('opacity','0.5');
	$.ajax({
    type: 'GET',
	  url: '/items/geoslider_update',
	  data: 'per_level='+per_level,
	  complete: function(t){ 
	    $('#per_main').html(t.responseText);
      $('#per_main').css('opacity','1.0');
	  }
	});	
  
}
</script>