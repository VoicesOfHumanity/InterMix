<%= hidden_field_tag "from", "individual" %>
<div class="forumitem forumitemplain forummain" id="item_<%= @item.id %>">
<%= render :partial => "item", :locals => { :item => @item, :is_reply => false, :odd_or_even=>0, :from=>'individual', :top=>@item.id, :showlong=>true } %>
</div>

<% if participant_signed_in? -%>
<ul>
<% if @item.num_in_thread > 1 -%>
<li><a href="/items/<%= @item.id %>/thread#item_<%= @item.id %>">Whole thread</a></li>
<% end -%>
<% if @item.dialog_id.to_i > 0 -%>
<li><a href="/dialogs/<%= @item.dialog_id %>/forum?perscr=100&amp;sortby=items.id+desc<%=raw "&amp;threads=flat" if @item.reply_to.to_i>0 %>#item_<%= @item.id %>">Discussion</a></li>
<% end -%>
<% if @item.root_item.group_id.to_i > 0 -%>
<li><a href="/groups/<%= @item.root_item.group_id %>/forum?perscr=100<%=raw "&amp;threads=flat" if @item.reply_to.to_i>0 %>#item_<%= @item.id %>">Group forum</a></li>
<% end -%>
</ul>
<% end -%>


