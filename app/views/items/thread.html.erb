<div id="itemlist">

		<% odd_or_even = 1 %>
		<div class="forumitem forummain forum<%= odd_or_even %>" id="item_<%= @first_item.id %>">
			<%= render :partial => "items/item", :locals => { :item => @first_item, :is_reply => false, :odd_or_even => odd_or_even, :from=>@from.to_s, :top=>0 } %>
		
			<% @replies = Item.where("is_first_in_thread=0 and first_in_thread=#{@first_item.id}").order("id").all -%>
			<% for reply in @replies -%>
				<% odd_or_even = 1-odd_or_even%>
				<div class="forumitem forumreply forum<%= odd_or_even %>" id="item_<%= reply.id %>">
					<%= render :partial => "items/item", :locals => { :item => reply, :is_reply => true, :odd_or_even => odd_or_even, :from=>@from.to_s, :top=>@first_item.id } %>
				</div>
			<% end -%>
		</div><!--forumitem-->

</div>


<ul>
<% if @item.dialog_id.to_i > 0 -%>
<li><a href="/dialogs/<%= @item.dialog_id %>/forum">Discussion</a></li>
<% end -%>
<% if @item.group_id.to_i > 0 -%>
<li><a href="/groups/<%= @item.group_id %>/forum">Group Forum</a></li>
<% end -%>
</ul>