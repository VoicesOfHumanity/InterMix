<!DOCTYPE html>
<html>
<head>
  <title>Intermix</title>
	<%= stylesheet_link_tag('blueprint/screen', :media => "all") %>
	<%= stylesheet_link_tag('blueprint/print', :media => "print") %>
	<!--[if lt IE 8]>
	<%= stylesheet_link_tag 'blueprint/ie', :media => "screen, projection" %>
	<![endif]-->
  <%= stylesheet_link_tag "main", "formtastic", "formtastic_changes", "pepper-grinder/jquery-ui-1.8.6.custom" %>
  <%= javascript_include_tag :defaults %>
	<%= javascript_include_tag :ckeditor %>
  <%= csrf_meta_tag %>
</head>
<body>

<div class="container">
	<div class="span-24 last">
		<div id="header">
			<ul class="logmenu">
			  <%= render 'devise/menu/login_items' %>
			  <%= render 'devise/menu/registration_items' %>
			</ul>
			<h1>intermix</h1>
			
			<div id="mainmenu">
				<ul>
				<li><a class="menu<%= ' selected' if @section=='home' %>" href="/">Home</a></li>
				<% if participant_signed_in? -%>
				<li><a  class="menu<%= ' selected' if @section=='forum' %>" href="/forum">Forum</a></li>
				<% end -%>
				</ul>
			</div>
			
			
		</div>
	</div>
	<div class="span-5">
		<div id="leftcolumn">
		&nbsp;
		</div>
	</div>
	<div class="span-19 last">
		<div id="maincontent">
			<% if flash[:notice].to_s !="" -%>
			<p style="color: green"><%= flash[:notice] %></p>
			<% end -%>
			<% if flash[:alert].to_s !="" -%>
			<p style="color: red"><%= flash[:alert] %></p>
			<% end -%>
			<%= yield %>
		</div>
	</div>
</div>



</body>
</html>
